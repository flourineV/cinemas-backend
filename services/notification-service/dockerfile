# Use official Node.js LTS image
FROM node:20

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the source code
COPY . .

# Expose your app's port (adjust if needed)
EXPOSE 3000

# Start the app in dev mode
CMD ["npm", "run", "dev"]
